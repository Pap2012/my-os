/* linker.ld */
/* ملف الربط لتحديد أماكن تحميل النواة */

ENTRY(_start)

SECTIONS
{
    . = 0x1000;            /* مكان تحميل الكود */

    .text : {
        *(.text)           /* كل مقاطع الكود */
    }

    .rodata : {
        *(.rodata*)        /* البيانات للقراءة فقط */
    }

    .data : {
        *(.data)           /* البيانات العادية */
    }

    .bss : {
        *(.bss)            /* الذاكرة غير المهيئة */
        *(COMMON)
    }
}
